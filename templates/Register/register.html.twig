{% extends 'base.html.twig' %}

{% block body %}

    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Create
                                        Account</h3></div>
                                <div class="card-body">
                                    {{ form_start(form) }}
                                    <div class="form-row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                {{ form_row(form.company_vat,{'label':'Vat Company','attr': {'class': 'form-control py-4'}}) }}
                                                {{ form_row(form.company_name) }}
                                                {{ form_row(form.postal_code) }}
                                                {{ form_row(form.phone_number,{'label':'Company Phone Number','attr': {'class': 'form-control py-4'}}) }}
                                                {{ form_row(form.name) }}
                                                {{ form_row(form.email) }}
                                                {{ form_row(form.password.first,{'label':'Password','attr': {'class': 'form-control py-4'}}) }}
                                                {{ form_row(form.password.second,{'label':'Confirm','attr': {'class': 'form-control py-4'}}) }}
                                            </div>
                                            {{ form_row(form.submit, {'label': 'Sign Up', 'attr': {'class': 'btn btn-primary btn-block'}}) }}
                                        </div>
                                        {{ form_end(form) }}
                                    </div>
                                    <div class="card-footer text-center">
                                        <div class="small"><a href="{{ path('ui_login') }}">Have an account? Go to
                                                login</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}