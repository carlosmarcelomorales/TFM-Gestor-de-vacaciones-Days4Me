{% extends 'base.html.twig' %}

{% block title %}Recupera tu contraseña{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>{%trans %} get.password{% endtrans %}</h1>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        {{ form_start(form) }}
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">{%trans %} get.password{% endtrans %}</h3>
                                </div>
                                <div class="card-body">

                                    <div class="box-body">
                                        <div class="col-md-12">
                                            {{ form_row(form.email, {'label': 'Email', 'attr': {'placeholder': 'Email'}}) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    {{ form_row(form.submit, {'label': 'Enviar', 'attr': {'class': 'btn btn-primary'}}) }}
                                </div>
                            </div>
                        {{ form_end(form) }}

                    </div>
                    <div class="col-md-3"></div>

                </div>

            </div>
        </section>
    </div>











    <!-- Main content -->
    <section>
        <div class="col-md-6 col-md-offset-3">
            <div class="box box-info box-login">
                <div class="box-header with-border">
                    <h3 class="box-title">Recupera tu contraseña</h3>
                </div>

            </div>
        </div>
    </section>
{% endblock %}
