{% extends 'base.html.twig' %}

{% block title %}Companies{% endblock %}
{% block page_header %}

{% endblock %}

{% block page_body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Users
            </h1>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">

                        <div class="box-header with-border">
                            <div class="row">
                                <div class="col-md-6">
                                    <h3 class="box-title"><i class="fa fa-list"></i>{% trans %}dashboard{% endtrans %}
                                    </h3>
                                </div>
                            </div>
                        </div>

                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-12">
                                    {# @TODO : Show Roles #}
                                    <table id="table-providers" class="table table-bordered customDatatable">
                                        <thead>
                                        <tr>
                                            <th>{% trans %}user.name{% endtrans %}</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <td>{{ app.user.name }}</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

{% endblock %}
